{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "esm",
    "strict": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./types",
    "baseUrl": ".",
    "paths": {
      "gecs": ["./src/index"]
    }
  },
  "include": ["./src/**/*.ts", "./benchmarks/**/*.ts"]
}
