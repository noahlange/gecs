  "main": "lib/index.js",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "dependencies": {
    "nanoevents": "^5.1.11",
    "nanoid": "^3.1",
    "ts-toolbelt": "^8.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@jest/globals": "^26.6.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nanobench": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=development jest --coverage",
    "start": "tsc --watch",
    "build": "tsc --project tsconfig.prod.json",
    "lint": "eslint 'src/**/*.{js,ts}' --fix ",
    "pretty": "prettier 'src/**/*.{js,ts}' --write",
    "precommit": "npm-run-all build test lint pretty",
    "bench:working": "node benchmarks > \"coverage/working\"",
    "bench:master": "node benchmarks > \"coverage/master\"",
    "bench:compare": "nanobench-compare \"coverage/working\" \"coverage/master\""
