{
  "name": "gecs",
  "version": "1.0.0-alpha.8",
  "description": "Generic-abusing ECS framework written in TypeScript.",
  "author": {
    "name": "Noah Lange",
    "email": "noahrlange@gmail.com",
    "url": "https://noahlange.com"
  },
  "type": "module",
  "module": "esm/index.js",
  "main": "lib/index.js",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "devDependencies": {
    "@types/nanobench": "^3.0.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nanobench": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^3.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.2"
  },
  "files": [
    "esm/**/*",
    "lib/**/*",
    "types/**/*"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "npx tsc",
    "dev": "npm-run-all dev:*",
    "dev:types": "tsc --noEmit",
    "dev:test": "vitest --ui --benchmark",
    "dev:lint": "eslint \"src/**/*.{js,ts}\" --fix --config \".eslintrc.cjs\"",
    "dev:pretty": "prettier \"src/**/*.{js,ts}\" --write",
    "bench": "npm-run-all build bench:working bench:compare",
    "bench:working": "tsx benchmarks > \"coverage/working\"",
    "bench:master": "tsx benchmarks > \"coverage/master\"",
    "bench:compare": "nanobench-compare \"coverage/working\" \"coverage/master\""
  }
}
