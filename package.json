{
  "name": "tecs",
  "version": "0.0.0",
  "description": "Experimental TypeScript ECS framework (ab)using generics for peak ergonomics.",
  "author": {
    "name": "Noah Lange",
    "email": "noahrlange@gmail.com",
    "url": "https://noahlange.com"
  },
  "type": "module",
  "module": "./esm/index.js",
  "main": "./lib/index.js",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "dependencies": {
    "nanoevents": "^5.1.11",
    "nanoid": "^3.1",
    "ts-toolbelt": "^8.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@jest/globals": "^26.6.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^26.5.0",
    "nanobench": "^2.1.1",
    "npm-run-all": "^1.7.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=development jest --coverage",
    "start": "tsc --watch",
    "build": "tsc --project tsconfig.prod.json",
    "bench": "npm-run-all build bench:working bench:compare",
    "lint": "eslint 'src/**/*.{js,ts}' --fix ",
    "pretty": "prettier 'src/**/*.{js,ts}' --write",
    "precommit": "npm-run-all build test lint pretty",
    "bench:working": "node benchmarks > \"coverage/working\"",
    "bench:master": "node benchmarks > \"coverage/master\"",
    "bench:compare": "nanobench-compare \"coverage/working\" \"coverage/master\""
  }
}
